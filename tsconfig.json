{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./lib",
      "baseUrl": "./",
      "incremental": true,
      "resolveJsonModule": true,
      "lib": [
        "ES2019"
      ],
    }
}
